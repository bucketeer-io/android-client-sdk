{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)"],
  "schedule": ["after 10am on the first day of the month"],
  "labels": ["deps"],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "all non-major github-actions dependencies",
      "groupSlug": "all-minor-patch",
      "managers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["ci"],
      "commitMessagePrefix": "ci(deps):",
      "commitMessageAction": "update"
    },
    {
      "groupName": "all major github-actions dependencies",
      "managers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "labels": ["ci"],
      "commitMessagePrefix": "ci:",
      "commitMessageAction": "update"
    },
    {
      "automerge": true,
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePrefixes": [
        "com.squareup.",
        "androidx.sqlite:",
        "com.google.android.",
        "androidx.appcompat:",
        "androidx.lifecycle:",
        "com.facebook.",
        "org.jetbrains.",
        "com.android.",
        "com.vanniktech.",
        "com.google.devtools.",
        "org.jmailen."
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessagePrefix": "build(deps):",
      "commitMessageAction": "update"
    },
    {
      "groupName": "all major dependencies",
      "matchPackagePrefixes": [
        "com.squareup.",
        "androidx.sqlite:",
        "com.google.android.",
        "androidx.appcompat:",
        "androidx.lifecycle:",
        "com.facebook.",
        "org.jetbrains.",
        "com.android.",
        "com.vanniktech.",
        "com.google.devtools.",
        "org.jmailen."
      ],
      "matchUpdateTypes": ["major"],
      "commitMessagePrefix": "build(deps):",
      "commitMessageAction": "update"
    },
    {
      "automerge": true,
      "groupName": "all non-major test dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePrefixes": [
        "junit:",
        "org.robolectric:",
        "com.google.truth:",
        "com.google.testparameterinjector:",
        "androidx.test:"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessagePrefix": "test(deps):",
      "commitMessageAction": "update"
    },
    {
      "groupName": "all major test dependencies",
      "matchPackagePrefixes": [
        "junit:",
        "org.robolectric:",
        "com.google.truth:",
        "com.google.testparameterinjector:",
        "androidx.test:"
      ],
      "matchUpdateTypes": ["major"],
      "commitMessagePrefix": "test(deps):",
      "commitMessageAction": "update"
    }
  ]
}
